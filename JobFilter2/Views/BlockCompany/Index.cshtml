@model List<JobFilter2.Models.Entities.BlockCompany>

<script>
    // 這個函數用來將 Entity Code 轉回中文
    function decodeEntities(encodedString) {
        var textArea = document.createElement('textarea');
        textArea.innerHTML = encodedString;
        return textArea.value;
    }
    var serverMessage = decodeEntities('@TempData["message"]');
    if (serverMessage.length > 0) {
        alert(serverMessage);
    }
</script>

<script>
    function DeleteData(idOfData) {
        var result = confirm("確定要刪除這筆資料?");
        if (result) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Delete", "BlockCompany")',
                data: { id: idOfData }
            })
            .done(function (message) {
                if (message == "刪除成功") {
                    document.getElementById("delete_" + idOfData).disabled = true;
                    // 令修改按鈕連帶失效、淡出
                    document.getElementById("edit_" + idOfData).style.pointerEvents = "none";
                    document.getElementById("edit_" + idOfData).style.opacity = "0.5";
                }
                else{
                    alert("資料庫異常，請聯絡相關人員!");
                }
            });
        }
    }
</script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">封鎖的公司列表</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th style="display:none;">排版用(不顯示)</th>
                                        <th>公司名稱</th>
                                        <th>封鎖理由</th>
                                        <th>操作選項</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sequence = 0;
                                        foreach (var blockCompany in Model)
                                        {
                                            sequence++;
                                            <tr class="gradeA">
                                                <td style="display:none;">@sequence</td>
                                                <td>@blockCompany.CompanyName</td>
                                                <td>@blockCompany.BlockReason</td>
                                                <td class="center-block">
                                                    <button class="btn btn-success" id="edit_@blockCompany.Id" onclick="location.href='@Url.Action("Edit", "BlockCompany", new { id = blockCompany.Id })'">修改</button>
                                                    <button class="btn btn-danger" id="delete_@blockCompany.Id" onclick="DeleteData(@blockCompany.Id)">刪除</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->