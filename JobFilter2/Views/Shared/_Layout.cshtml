                responsive: true
            });
        });
    </script>
    <script>
        function Export() {
            (async () => {
                const { value: inputValue } = await Swal.fire({
                    title: '匯出路徑如下',
                    width:600,
                    html:'<input id="swal-input" class="swal2-input" value="D:\\Desktop\\Profile\\Note\\Job\\JobFilter2" style="font-size:20px;width:400px;">',
                    focusConfirm: false,
                    showCancelButton: true,
                    customClass: {
                        title: 'swal-title-font-size',
                        closeButton: 'swal-button-font-size',
                        confirmButton: 'swal-button-font-size',
                        cancelButton: 'swal-button-font-size'
                    },
                    preConfirm: () => {
                        return document.getElementById('swal-input').value
                    }
                })

                if (inputValue) {
                    //Swal.fire(inputValue)
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Export", "Backup")',
                        data: { exportPath: inputValue }
                    })
                    .done(function (message) {
                        Swal.fire({
                            title : message,
                            customClass: {
                                title: 'swal-title-font-size',
                                closeButton: 'swal-button-font-size',
                                confirmButton: 'swal-button-font-size',
                                cancelButton: 'swal-button-font-size'
                            }
                        });
                    });
                }
            })()
        }
        function Import() {
            (async () => {
                const { value: inputValue } = await Swal.fire({
                    title: '匯入來源如下',
                    width:600,
                    html:'<input id="swal-input" class="swal2-input" value="D:\\Desktop\\Profile\\Note\\Job\\JobFilter2" style="font-size:20px;width:400px;">',
                    focusConfirm: false,
                    showCancelButton: true,
                    customClass: {
                        title: 'swal-title-font-size',
                        closeButton: 'swal-button-font-size',
                        confirmButton: 'swal-button-font-size',
                        cancelButton: 'swal-button-font-size'
                    },
                    preConfirm: () => {
                        return document.getElementById('swal-input').value
                    }
                })

                if (inputValue) {
                    //Swal.fire(inputValue)
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Import", "Backup")',
                        data: { importPath: inputValue }
                    })
                    .done(function (message) {
                        Swal.fire({
                            title : message,
                            customClass: {
                                title: 'swal-title-font-size',
                                closeButton: 'swal-button-font-size',
                                confirmButton: 'swal-button-font-size',
                                cancelButton: 'swal-button-font-size'
                            }
                        });
                    });
                }
            })()
        }
    </script>
</body>
