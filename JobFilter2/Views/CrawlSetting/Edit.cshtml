@model JobFilter2.Models.Entities.CrawlSetting

<script>
    // 這個函數用來將 Entity Code 轉回中文
    function decodeEntities(encodedString) {
        var textArea = document.createElement('textarea');
        textArea.innerHTML = encodedString;
        return textArea.value;
    }
    var serverMessage = decodeEntities('@TempData["message"]');
    if (serverMessage.length > 0) {
        Swal.fire({
            title : serverMessage,
            customClass: {
                title: 'swal-title-font-size',
                closeButton: 'swal-button-font-size',
                confirmButton: 'swal-button-font-size',
                cancelButton: 'swal-button-font-size'
            }
        });
    }
</script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">修改爬蟲設定</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        請填寫並確認表單內容
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <form role="form" asp-controller="CrawlSetting" asp-action="Edit">
                                    <input type="hidden" name="Id" value=@Model.Id>
                                    <div class="form-group">
                                        <label>設定說明</label>
                                        <input class="form-control" name="Remark" maxlength="20" value="@Model.Remark">
                                    </div>
                                    <div class="form-group">
                                        <label>目標網址</label>
                                        <textarea class="form-control" name="TargetUrl" rows="6" maxlength="400" required>@Model.TargetUrl</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>最低薪水</label>
                                        <input class="form-control" name="MinSalary" type="number" value=@Model.MinSalary min="40000" max=300000 autocomplete="off" required>
                                    </div>
                                    <div class="form-group" style="margin-top:25px;">
                                        <label>工作年資</label>&nbsp;&nbsp;&nbsp;&nbsp;
                                        @{
                                            string isChecked_1 = Model.Seniority == "1年以下" ? "checked" : "";
                                            string isChecked_2 = Model.Seniority == "1~3年" ? "checked" : "";
                                            string isChecked_3 = Model.Seniority == "3~5年" ? "checked" : "";
                                            string radioStyle = "width:18px;height:18px; cursor:pointer; margin-top:3px;";
                                            string radioLabelStyle = "margin-left:4px; font-size:14px; margin-top:3px;";

                                            <label class="radio-inline">
                                                <input type="radio" style="@radioStyle" name="Seniority" value="1年以下" @isChecked_1>
                                                <label style="@radioLabelStyle">1年以下</label>
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" style="@radioStyle" name="Seniority" value="1~3年" @isChecked_2>
                                                <label style="@radioLabelStyle">1~3年</label>
                                            </label>
                                            <label class="radio-inline">
                                                <input type="radio" style="@radioStyle" name="Seniority" value="3~5年" @isChecked_3>
                                                <label style="@radioLabelStyle">3~5年</label>
                                            </label>
                                        }
                                    </div>
                                    <button type="submit" class="btn btn-primary">送出</button>
                                    <button type="reset" class="btn btn-success">重設</button>
                                    <a class="btn btn-danger" href="@Url.Action("Index","CrawlSetting")">回上一頁</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
