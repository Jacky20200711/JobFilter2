@model JobFilter2.Models.Entities.CrawlSetting

<script>
    // 這個函數用來將 Entity Code 轉回中文
    function decodeEntities(encodedString) {
        var textArea = document.createElement('textarea');
        textArea.innerHTML = encodedString;
        return textArea.value;
    }
    var serverMessage = decodeEntities('@TempData["message"]');
    if (serverMessage.length > 0) {
        alert(serverMessage);
    }
</script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">修改爬蟲設定</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        請填寫並確認表單內容
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <form role="form" asp-controller="CrawlSetting" asp-action="Edit">
                                    <input type="hidden" name="id" value=@Model.Id>
                                    <div class="form-group">
                                        <label>設定說明</label>
                                        <input class="form-control" name="remark" maxlength="20" value="@Model.Remark">
                                    </div>
                                    <div class="form-group">
                                        <label>目標網址</label>
                                        <textarea class="form-control" name="targetUrl" rows="6" maxlength="400" required>@Model.TargetUrl</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>最低薪水</label>
                                        <input class="form-control" name="minSalary" type="number" value=@Model.MinSalary min="40000" max=300000 autocomplete="off" required>
                                    </div>
                                    <div class="form-group">
                                        <label>工作年資</label><br>
                                        @{
                                            if (Model.Seniority == "1年以下")
                                            {
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios1" value="1年以下" checked>1年以下
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios2" value="1~3年">1~3年
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios3" value="3~5年">3~5年
                                                    </label>
                                                </div>
                                            }
                                            else if (Model.Seniority == "1~3年")
                                            {
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios1" value="1年以下">1年以下
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios2" value="1~3年" checked>1~3年
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios3" value="3~5年">3~5年
                                                    </label>
                                                </div>
                                            }
                                            else if (Model.Seniority == "3~5年")
                                            {
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios1" value="1年以下">1年以下
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios2" value="1~3年">1~3年
                                                    </label>
                                                </div>
                                                <div class="radio-inline">
                                                    <label>
                                                        <input type="radio" name="seniority" id="optionsRadios3" value="3~5年" checked>3~5年
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <button type="submit" class="btn btn-primary">送出</button>
                                    <button type="reset" class="btn btn-success">重設</button>
                                    <a class="btn btn-danger" href="@Url.Action("Index","CrawlSetting")">回上一頁</a>
                                </form>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
