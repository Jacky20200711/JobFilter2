@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http
@using JobFilter2.Services
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    List<JobItem> jobItems = new List<JobItem>();
    string itemStr = HttpContextAccessor.HttpContext.Session.GetString("jobItems");
    if(itemStr != null)
    {
        jobItems = JsonConvert.DeserializeObject<List<JobItem>>(itemStr);
    }
}﻿

<script>
    // 這個函數用來將 Entity Code 轉回中文
    function decodeEntities(encodedString) {
        var textArea = document.createElement('textarea');
        textArea.innerHTML = encodedString;
        return textArea.value;
    }
    var serverMessage = decodeEntities('@TempData["message"]');
    if (serverMessage.length > 0) {
        Swal.fire({
            title : serverMessage,
            customClass: {
                title: 'swal-title-font-size',
                closeButton: 'swal-button-font-size',
                confirmButton: 'swal-button-font-size',
                cancelButton: 'swal-button-font-size'
            }
        });
    }
</script>

<script>
    function BlockJob(jobCode, btn_blockJob, btn_blockCompany) {
        Swal.fire({
            title: "確定要封鎖?",
            showCancelButton: true,
            customClass: {
                title: 'swal-title-font-size',
                closeButton: 'swal-button-font-size',
                confirmButton: 'swal-button-font-size',
                cancelButton: 'swal-button-font-size'
            }
        }).then(function(result) {
            if (result.value) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "BlockJobItem")',
                    data: { jobCode: jobCode }
                })
                .done(function (message) {
                    if (message == "封鎖成功") {
                        document.getElementById(btn_blockCompany).disabled = true;
                        document.getElementById(btn_blockJob).disabled = true;
                    }
                    else{
                        Swal.fire({
                            title : "操作失敗",
                            customClass: {
                                title: 'swal-title-font-size',
                                closeButton: 'swal-button-font-size',
                                confirmButton: 'swal-button-font-size',
                                cancelButton: 'swal-button-font-size'
                            }
                        });
                    }
                });
            }
        });
    }
</script>

<script>
    function BlockCompany(btn_blockCompany, companyName, btn_blockJob) {
        (async () => {
            const { value: blockReason } = await Swal.fire({
                title: '請選擇封鎖理由',
                width:360,
                input: 'radio',
                inputOptions: {
                    @Html.Raw(@Utility.GetRadioItems())
                },
                inputValue: 'R01', // R01這個值來自於後端定義的封鎖代碼
                showCancelButton: true,
                customClass: {
                    title: 'swal-title-font-size',
                    closeButton: 'swal-button-font-size',
                    confirmButton: 'swal-button-font-size',
                    cancelButton: 'swal-button-font-size',
                    input: 'swal-radio'
                },
            })
            if (blockReason) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "BlockCompany")',
                    data: { companyName: companyName, blockReason: blockReason }
                })
                .done(function (message) {
                    if (message == "封鎖成功") {
                        document.getElementById(btn_blockCompany).disabled = true;
                        document.getElementById(btn_blockJob).disabled = true;
                    }
                    else{
                        Swal.fire({
                            title : "操作失敗",
                            customClass: {
                                title: 'swal-title-font-size',
                                closeButton: 'swal-button-font-size',
                                confirmButton: 'swal-button-font-size',
                                cancelButton: 'swal-button-font-size'
                            }
                        });
                    }
                });
            }

        })()
    }
</script>

<script>
    function SearchComment(companyName) {
        var fileLink1 = document.createElement("a");
        var fileLink2 = document.createElement("a");
        var fileLink3 = document.createElement("a");
        var fileLink4 = document.createElement("a");
        document.body.appendChild(fileLink1);
        document.body.appendChild(fileLink2);
        document.body.appendChild(fileLink3);
        document.body.appendChild(fileLink4);
        fileLink1.style = "display:none";
        fileLink2.style = "display:none";
        fileLink3.style = "display:none";
        fileLink4.style = "display:none";
        fileLink1.setAttribute('target', '_blank');
        fileLink2.setAttribute('target', '_blank');
        fileLink3.setAttribute('target', '_blank');
        fileLink4.setAttribute('target', '_blank');
        fileLink1.href = "https://interview.tw/search?keyword=" + companyName;
        fileLink2.href = "https://www.qollie.com/search?keyword=" + companyName + "&kind=company&from=normal";
        fileLink3.href = "https://www.twjobs.net/q.aspx?q=" + companyName;
        fileLink4.href = "https://www.goodjob.life/companies/" + companyName;
        fileLink1.click();
        fileLink2.click();
        fileLink3.click();
        fileLink4.click();
    }
</script>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">過濾後的工作列表</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th style="display:none;">排版用(不顯示)</th>
                                        <th style="white-space: nowrap;">職位名稱</th>
                                        <th style="white-space: nowrap;">薪資範圍</th>
                                        <th style="white-space: nowrap;">公司名稱</th>
                                        <th style="white-space: nowrap;">公司地址</th>
                                        <th style="white-space: nowrap;">操作選項</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int sequence = 0;
                                        foreach (var jobItem in jobItems)
                                        {
                                            sequence++;
                                            string selector_id = Guid.NewGuid().ToString();
                                            <tr class="gradeA">
                                                <td style="display:none;">@sequence</td>
                                                <td><a href="@jobItem.Link" target="_blank">@jobItem.Title</a></td>
                                                <td>@jobItem.Salary</td>
                                                <td><a onclick="SearchComment('@jobItem.Company'); return false;" style="cursor:pointer;">@jobItem.Company</a></td>
                                                <td><a href="https://www.google.com/maps?q=@jobItem.Address" target="_blank">@jobItem.Address</a></td>
                                                <td class="center-block" style="white-space: nowrap;">
                                                    <button class="btn btn-success" id="btn_blockJob_@jobItem.Code" onclick="BlockJob('@jobItem.Code', 'btn_blockJob_@jobItem.Code', 'btn_blockCompany_@jobItem.Code')">封鎖工作</button>
                                                    <button class="btn btn-danger" id="btn_blockCompany_@jobItem.Code" onclick="BlockCompany('btn_blockCompany_@jobItem.Code', '@jobItem.Company', 'btn_blockJob_@jobItem.Code')">封鎖公司</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->